<% layout ('layouts/boilerplate.ejs') %>


<div class="row">
    <h1 class="text-center">Criar novo Parcão</h1>
    <div class="col-md-6 offset-md-3">
        <form action="/parcaos" method="post" class="needs-validation" enctype="multipart/form-data" novalidate>
            <div class="mb-3">
                <label class="form-label" for="title">Nome</label>
                <input class="form-control" type="text" name="parcao[title]" id="title" required>
                <div class="invalid-feedback">
                    Informe o nome.
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Localização</label>
                <input class="form-control" type="text" name="parcao[location]" id="location" required>
                <div class="invalid-feedback">
                    Diga a localização.
                </div>
            </div>
            <!-- <div class="mb-3">
                    <label class="form-label" for="image">URL da Imagem</label>
                    <input class="form-control" type="text" name="parcao[image]" id="image" required>
                    <div class="invalid-feedback">
                        Informe a URL da imagem.
                    </div>
                </div> -->
            <div class="mb-3">
                <label class="form-label" for="price">Preço</label>
                <div class="input-group mb-3">
                    <span class="input-group-text" id="price-label">R$</span>
                    <input type="text" class="form-control" id="price" name="parcao[price]" placeholder="0,00"
                        aria-label="Price" aria-describedby="price-label" required>
                    <div class="invalid-feedback">
                        Informe o preço.
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Descrição</label>
                    <textarea class="form-control" type="text" name="parcao[description]" id="description"
                        required></textarea>
                    <div class="invalid-feedback">
                        Descreva o Parcão.
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Imagem</label>
                    <input class="form-control" type="file" name="image" id="image" required multiple>
                    <div class="invalid-feedback">
                        Insira uma imagem.
                    </div>
                </div>

                <button class="btn btn-success">Criar Parcão!</button>

        </form>

    </div>
</div>